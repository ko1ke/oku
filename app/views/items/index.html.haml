%h1 Listing items

%table
  %thead
    %tr
      %th User
      %th Category
      %th Name
      %th Explanation
      %th
      %th
      %th
      
  %tbody
    - @items.each do |item|
      %tr
        %td= item.user
        %td= item.category
        %td= item.name
        %td= item.explanation
        %td= link_to 'Show', item
        %td= link_to 'Edit', edit_item_path(item)
        %td= link_to 'Destroy', item, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

